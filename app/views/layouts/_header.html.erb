<header class="text-white body-font bg-blue-900">
  <div class="container mx-auto flex p-5">
    <%= link_to "Daylog", root_path, class: "font-medium text-xl" %>
    <nav class="mr-auto ml-5 py-1 pl-4 border-l border-white">
      <%= link_to "タイマー", timer_path, class: "mr-5 hover:text-gray-300" %>
      <%= link_to "カテゴリ設定", "#", class: "mr-5 hover:text-gray-300" %>
      <%= link_to "ログ一覧", "#", class: "mr-5 hover:text-gray-300" %>
    </nav>

    <%# アカウントアイコンをホバーでメニュー表示%>
    <div class="account-menu relative group flex items-center hover:text-gray-300 hover:cursor-pointer">
      <span class="material-symbols-outlined" style="font-size: 36px;">
        account_circle
      </span>
      <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="-mr-1 size-5 text-gray-400 ">
        <path d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
      </svg>
      <%# ドロップダウンメニュー %>
      <div class="absolute top-8 right-0 mt-2 w-40 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 hidden group-hover:block z-10">
        <div class="py-1">
          <%= link_to "アカウント設定", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
        </div>
      </div>
    </div>


  </div>
</header>
