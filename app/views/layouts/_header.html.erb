<header class="sticky top-0 z-999 text-white body-font bg-blue-900 shadow">
  <div class="container mx-auto flex p-4 items-center">
    <%= link_to "Daylog", root_path, class: "font-medium text-2xl" %>

    <% if current_user %>
      <nav class="mr-auto ml-5 pl-5 border-l border-white">
        <%= link_to "タイマー", timer_path, class: "mr-5 hover:text-gray-300" %>
        <%= link_to "カテゴリ設定", categories_path, class: "mr-5 hover:text-gray-300" %>
        <%= link_to "ログ一覧", logs_path, class: "mr-5 hover:text-gray-300" %>
      </nav>

      <%# アカウントアイコンをホバーでメニュー表示%>
      <div class="account-menu relative group flex items-center hover:text-gray-300 hover:cursor-pointer">
        <span class="material-symbols-outlined" style="font-size: 36px;">
          account_circle
        </span>
        <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="-mr-1 size-5 text-gray-400 ">
          <path d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
        </svg>
        <%# ドロップダウンメニュー %>
        <div class="absolute top-10 right-0 min-w-40 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 hidden group-hover:block z-10">
          <div class="px-4 py-3 text-sm border-b text-gray-500">
            <% if user_signed_in? %>
              <div>
                <%= "name" %>
              </div>
              <div>
                <%= current_user.email %>
              </div>
            <% end %>
          </div>
          <div class="py-2">
            <%= link_to "アカウント設定", edit_user_registration_path, class: "block px-4 py-2 text-sm text-black hover:bg-gray-100" %>
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-black hover:bg-gray-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</header>
