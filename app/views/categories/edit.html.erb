<section class="py-12 px-4 max-w-3xl mx-auto">
  <div class="max-w-5xl mx-auto bg-white p-8 rounded shadow-md">
    <h2 class="text-3xl font-bold text-blue-900 mb-8 border-b pb-2">カテゴリを編集</h2>

    <%= form_with model: @category, local: true do |f| %>
      <div class="mb-6">
        <%= f.label :name, "カテゴリ名", class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-center gap-4">
        <%= f.submit "更新する", class: "bg-blue-900 text-white font-semibold py-2 px-6 rounded hover:bg-blue-800 transition" %>
        <%= link_to "戻る", categories_path, class: "text-blue-900 hover:underline text-sm" %>
      </div>
    <% end %>
  </div>
</section>
