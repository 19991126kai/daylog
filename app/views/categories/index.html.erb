<section class="py-12 px-4 max-w-3xl mx-auto">
  <div class="max-w-5xl mx-auto bg-white p-8 rounded shadow-md">
    <h2 class="text-3xl font-bold text-blue-900 mb-8 border-b pb-2">カテゴリ一覧</h2>

    <% if @categories.present? %>
      <div class="space-y-4">
        <% @categories.each do |category| %>
          <div class="bg-gray-50 border border-gray-200 p-4 rounded shadow-sm flex items-center justify-between">
            <p class="text-lg font-semibold text-gray-700"><%= category.name %></p>

            <div class="flex gap-2">
              <%= link_to edit_category_path(category), class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition" do %>
                <span class="material-symbols-outlined mr-1 text-sm">edit</span> 編集
              <% end %>

              <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-red-600 rounded hover:bg-red-700 transition" do %>
                <span class="material-symbols-outlined mr-1 text-sm">delete</span> 削除
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">カテゴリがまだ登録されていません。</p>
    <% end %>

    <div class="mt-8 text-left">
      <%= link_to "カテゴリを追加", new_category_path, class: "bg-blue-900 font-bold text-white py-2 px-6 rounded hover:bg-blue-800 transition inline-flex items-center gap-2" %>
    </div>
  </div>
</section>
