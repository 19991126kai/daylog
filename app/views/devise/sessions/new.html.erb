<div class="flex items-center justify-center mt-15">
  <div class="w-full max-w-md bg-white p-8 rounded shadow-md">
    
    <%# ログイン／新規登録ページ切り替え用のタブ %>
    <%= render "devise/shared/login_register_tab" %>

    <h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

    <%= form_with scope: :user, url: session_path(:user), class: "space-y-6", local: true do |f| %>
      <div>
        <%= f.label "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= f.label "ログインを記憶する", class: "ml-2 text-sm text-gray-900" %>
      </div>

      <div>
        <%= f.submit "ログイン", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded bg-blue-900 text-white font-semibold hover:bg-blue-800" %>
      </div>
    <% end %>
  </div>
</div>
