<section class="py-12 px-4 max-w-7xl mx-auto">
  <div class="bg-white p-8 rounded shadow-md">
    <h2 class="text-3xl font-bold text-blue-900 mb-8 border-b pb-2">学習履歴</h2>

    <div class="mt-8 text-left mb-8">
      <%= link_to new_log_path, class: "bg-blue-900 text-white py-2 px-6 rounded hover:bg-blue-800 transition inline-flex items-center gap-2" do %>
        <span class="material-symbols-outlined">add</span>
        学習記録を追加
      <% end %>
    </div>

    <% if @logs.present? %>
      <div class="overflow-x-auto">
        <table class="min-w-full table-auto border-collapse">
          <thead>
            <tr class="bg-gray-100 text-left text-gray-700">
              <th class="px-4 py-3 border-b">学習日</th>
              <th class="px-4 py-3 border-b">カテゴリ</th>
              <th class="px-4 py-3 border-b">学習時間</th>
              <th class="px-4 py-3 border-b text-right">編集・削除</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <% @logs.each do |log| %>
              <tr class="hover:bg-gray-50">
                <!-- 学習日 -->
                <td class="px-4 py-3 border-b">
                  <%= log.study_date.strftime("%Y年%m月%d日") %>
                </td>

                <!-- カテゴリ -->
                <td class="px-4 py-3 border-b">
                  <%= log.category&.name || "未分類" %>
                </td>

                <!-- 学習時間 -->
                <td class="px-4 py-3 border-b">
                  <% hours = log.duration / 60 %>
                  <% minutes = log.duration % 60 %>
                  <%= "#{hours}時間#{minutes}分" %>
                </td>

                <!-- 編集・削除 -->
                <td class="px-4 py-3 border-b">
                  <div class="flex justify-end gap-2">
                    <%= link_to edit_log_path(log),
                      class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition" do %>
                      <span class="material-symbols-outlined mr-1 text-sm">edit</span> 編集
                    <% end %>

                    <%= link_to log_path(log),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-red-600 rounded hover:bg-red-700 transition" do %>
                      <span class="material-symbols-outlined mr-1 text-sm">delete</span> 削除
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="pagenation mt-6 text-center">
        <%= paginate @logs, params: request.query_parameters %>
      </div>
    <% else %>
      <p class="text-gray-600">学習記録がまだありません。</p>
    <% end %>
  </div>
</section>
