<section class="py-12 px-4 max-w-7xl mx-auto">
  <div class="bg-white p-8 rounded shadow-md">
    <h2 class="text-3xl font-bold text-blue-900 mb-8 border-b pb-2">学習ログ一覧</h2>
    <% if @logs.present? %>
      <div class="overflow-x-auto">
        <table class="min-w-full table-auto border-collapse">
          <thead>
            <tr class="bg-gray-100 text-left text-gray-700">
              <th class="px-4 py-3 border-b">日付</th>
              <th class="px-4 py-3 border-b">カテゴリ</th>
              <th class="px-4 py-3 border-b">開始</th>
              <th class="px-4 py-3 border-b">終了</th>
              <th class="px-4 py-3 border-b">学習時間</th>
              <th class="px-4 py-3 border-b text-right">編集・削除</th>
            </tr>
          </thead>
          <tbody class="text-gray-800">
            <% @logs.each do |log| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 border-b"><%= log.start_date.in_time_zone.strftime("%Y年%m月%d日") %></td>
                <td class="px-4 py-3 border-b"><%= log.category&.name || "未設定" %></td>
                <td class="px-4 py-3 border-b">
                  <%= log.start_time.in_time_zone.strftime("%H:%M") || "-" %>
                </td>
                <td class="px-4 py-3 border-b">
                  <%= log.end_time.in_time_zone.strftime("%H:%M") || "-" %>
                </td>
                <td class="px-4 py-3 border-b">
                  <% hours = log.duration / 60 %>
                  <% minutes = log.duration % 60 %>
                  <%= "#{hours}時間#{minutes}分" %>
                </td>
                <td class="px-4 py-3 border-b">
                  <div class="flex justify-end gap-2">
                    <%= link_to edit_log_path(log), class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition" do %>
                      <span class="material-symbols-outlined mr-1 text-sm">edit</span> 編集
                    <% end %>
                    <%= link_to "#", class: "inline-flex items-center px-3 py-1 text-sm font-medium text-white bg-red-600 rounded hover:bg-red-700 transition" do %>
                      <span class="material-symbols-outlined mr-1 text-sm">delete</span> 削除
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="pagenation mt-6 text-center">
        <%= paginate @logs, params: request.query_parameters %>
      </div>
    <% else %>
      <p class="text-gray-600">学習ログがまだ登録されていません。</p>
    <% end %>
    <div class="mt-8 text-left">
      <%= link_to new_log_path, class: "bg-blue-900 text-white py-2 px-6 rounded hover:bg-blue-800 transition inline-flex items-center gap-2" do %>
        <span class="material-symbols-outlined">add</span>
        新しいログを追加
      <% end %>
    </div>
  </div>
</section>
